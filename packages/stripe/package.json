{
  "name": "@videofly/stripe",
  "private": true,
  "version": "0.1.0",
  "exports": {
    ".": "./src/index.ts",
    "./plans": "./src/plans.ts",
    "./env": "./src/env.mjs"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev": "echo '⏭️  Stripe CLI skipped (install later with: brew install stripe/stripe-cli/stripe)'",
    "lint": "eslint .",
    "format": "prettier --check '**/*.{mjs,ts,json}' ",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@videofly/db": "workspace:*",
    "@t3-oss/env-nextjs": "0.13.10",
    "stripe": "14.15.0"
  },
  "devDependencies": {
    "@videofly/eslint-config": "workspace:*",
    "@videofly/prettier-config": "workspace:*",
    "@videofly/typescript-config": "workspace:*",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  },
  "eslintConfig": {
    "extends": [
      "@videofly/eslint-config/base"
    ]
  },
  "prettier": "@videofly/prettier-config"
}
